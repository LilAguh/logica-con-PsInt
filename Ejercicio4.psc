	// Calculo area y perimetro de un Rectangulo
	Imprimir 'Proporcione la base del rectangulo: '
	Leer base
	Imprimir 'Proporcione la altura del rectangulo: '
	leer altura
	Imprimir 'La base del rectangulo es ', base, ' y su altura es ', altura
	area = base * altura
	perimetro = 2 * (base + altura)
	Imprimir 'El area del rectangulo es: ', area
	Imprimir 'El perimetro del rectangulo es: ', perimetro
